<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home"> <!-- Use @id instead of @+id for startDestination -->

    <fragment
        android:id="@+id/nav_home"
        android:name="com.animetone.incognitocontact.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.animetone.incognitocontact.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.animetone.incognitocontact.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />

    <fragment
        android:id="@+id/messagesFragment"
        android:name="com.animetone.incognitocontact.mail.ui.MessagesFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/phoneFragment"
        android:name="com.animetone.incognitocontact.phone.ui.PhoneListFragment"
        android:label="Numbers"
        tools:layout="@layout/fragment_phone_list" />

    <fragment
        android:id="@+id/otpFragment"
        android:name="com.animetone.incognitocontact.phone.ui.OtpFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_otp" />

</navigation>
